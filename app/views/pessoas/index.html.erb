<div class="container-fluid headr">
  <div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <%= link_to 'Nova Pessoa', new_pessoa_path, class: "btn btn-primary" %>

    <p id="notice"><%= notice %></p>

    <h1>Pessoas</h1>

    <table class="tabela col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <thead>
        <tr>
          <th>Cpf</th>
          <th>Nome</th>
          <th>Rg</th>
          <th>Email</th>
          <th>Sexo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pessoas.each do |pessoa| %>
          <tr>
            <td><%= pessoa.cpf %></td>
            <td><%= pessoa.nome %></td>
            <td><%= pessoa.rg %></td>
            <td><%= pessoa.email %></td>
            <td><%= pessoa.sexo %></td>
            <td><%= link_to 'Mostrar', pessoa %></td>
            <td><%= link_to 'Editar', edit_pessoa_path(pessoa) %></td>
            <td><%= link_to 'Excluir', pessoa, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


