<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Data nascimento</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.rg %></td>
        <td><%= pessoa.cpf %></td>
        <td><%= pessoa.data_nascimento %></td>
        <td><%= pessoa.telefone %></td>
        <td><%= pessoa.celular %></td>
        <td><%= pessoa.usuario.email %></td>
        <td><%= link_to 'Mostrar', pessoa %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Remover', pessoa, method: :delete, data: { confirm: 'EstÃ¡ certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

