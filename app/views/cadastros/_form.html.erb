<%= form_for @cadastro, :html => { :class => "form-horizontal cadastro" } do |f| %>

  <% if @cadastro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cadastro.errors.count, "erros") %> impedem salvar o cadastro:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cadastro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :rg, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rg, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rg) %>
  </div>
  <div class="form-group">
    <%= f.label :cpf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cpf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cpf) %>
  </div>
  <div class="form-group">
    <%= f.label :data_nascimento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :data_nascimento, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_nascimento) %>
  </div>
  <div class="form-group">
    <%= f.label :rua, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rua, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rua) %>
  </div>
  <div class="form-group">
    <%= f.label :numero, :class => 'control-label col-lg-2' %>
