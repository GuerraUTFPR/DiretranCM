  <% #!LER Deletar? %>
  
  <div class="form-group">
    <%= f.label :usuarios_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :usuarios_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:usuarios_id) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cadastros_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
