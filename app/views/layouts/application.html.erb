<!DOCTYPE html>
<html>
  <head>
    <title>DiretranCM</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-default">
  	<div class="container-fluid">
  		<div class="navbar-header">
  			<a class="navbar-brand" href="<%= dash_index_path %>">
  				DiretranCM
  			</a>
  		</div>
  		<div class="collapse navbar-collapse">
  			<ul class="nav navbar-nav">
  				<li class="<%= 'active' if (current_page?(root_path) || current_page?(dash_index_path)) %>">
  					<a href="<%= dash_index_path %>">Página Inicial</a>
	  			</li>
          <% if usuario_signed_in? %>
	  			<li class="<%= 'active' if current_page?(cadastros_path) %>">
	  				<a href="<%= cadastros_path %>">Gerenciar cadastros</a>
	  			</li>
          <% end %>
  			</ul>
  			
			
			<% if usuario_signed_in? %>
			<p class="navbar-text navbar-right">
				
				<%= link_to('Sair', destroy_usuario_session_path, :method => :delete, class: "navbar-link") %>
			</p>
			<p class="navbar-text navbar-right">
				<% #usuario_path(usuario_id) %>
				Autenticado como <a class="navbar-link" href="<%= edit_usuario_registration_path %>"><%= current_usuario.email %></a>
			</p>
			
			<% else %>
			<p class="navbar-text navbar-right">
				Não autenticado, <a class="navbar-link" href="<%= new_usuario_session_path %>">Conectar?</a> <a class="navbar-link" href="<%= new_usuario_registration_path %>">Cadastrar?</a>
			</p>
			<% end %>
  		</div>
  	</div>
  </nav>

    <%= yield %>
  </body>
</html>
