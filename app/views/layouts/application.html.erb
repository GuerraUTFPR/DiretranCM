<!DOCTYPE html>
<html>
  <head>
    <title>DiretranCM</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-default">
  	<div class="container-fluid">
  		<div class="navbar-header">
  			<a class="navbar-brand" href="<%= dash_index_path %>">
  				DiretranCM
  			</a>
  		</div>
  		<div class="collapse navbar-collapse">
  			<ul class="nav navbar-nav">
  				<li class="<%= 'active' if (current_page?(root_path) || current_page?(dash_index_path)) %>">
  					<a href="<%= dash_index_path %>">PÃ¡gina Inicial</a>
	  			</li>
          <% if usuario_signed_in? %>
	  			<li class="<%= 'active' if current_page?(cadastros_path) %>">
	  				<a href="<%= cadastros_path %>">Gerenciar cadastros</a>
	  			</li>
          <% end %>
  			</ul>	

		  <p class="navbar-text pull-right">
        <% if usuario_signed_in? %>
          Entrou como: <strong><%= current_usuario.email %></strong>.
          <%= link_to 'Editar perfil', edit_usuario_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Sair", destroy_usuario_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Cadastrar", new_usuario_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Entrar", new_usuario_session_path, :class => 'navbar-link'  %>
        <% end %>
      </p>

			
  		</div>
  	</div>
  </nav>

    <%= yield %>
  </body>
</html>
